
<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mt-5 mb-5">
      <div class="card-body">
        <h1 class="text-center mb-4">Se connecter</h1>
        <hr>
        <div class="mt-5 mb-5">
        </div>
        <%= form_with(url: sessions_path, method: :post, local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", placeholder: "Email", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", placeholder: "Mot de passe", required: true %>
          </div>
        <div class="mt-5 mb-5">
        </div>
          <div class="text-center">
            <%= form.submit "Se connecter", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        <div class="mt-5 mb-5">
          <hr>
        </div>

      </div>
    </div>
  </div>
</div>
