<h1>Se connecter</h1>

<%= form_with(url: login_path, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, name: "session[email]", class: "form-control", placeholder: "Email" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, name: "session[password]", class: "form-control", placeholder: "Mot de passe" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Se connecter", class: "btn btn-primary" %>
  </div>
<% end %>
