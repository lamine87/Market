<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mt-5 mb-5">
      <div class="card-body" id="connecter">
      <h1 class="d-flex align-items-center justify-content-center">Modifier l'utilisateur</h1>
        <%= form_with(model: @user, local: true) do |form| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> Utilisateur non sauvegarder :</h2>
              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
              <%= form.label :prenom %>
              <%= form.text_field :prenom, class: "form-control" %>
          </div>

          <div class="mb-3">
              <%= form.label :nom %>
              <%= form.text_field :nom, class: "form-control" %>
          </div>
          <div class="mb-3">
              <%= form.label :email %>
              <%= form.text_field :email, class: "form-control" %>
          </div>
          
          <div class="text-center mb-3">
              <%= form.submit "Modifier", class: "btn btn-primary" %>
              <%= link_to 'Annuler', {:controller => 'users', :action => 'index'}, class: 'btn btn-secondary' %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>






