<!-- app/views/users/show.html.erb -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title d-flex align-items-center justify-content-center">Détails du Produit</h1>
          
          <p class="card-text">
            <strong>Nom :</strong>
            <%= @produit.nom %>
          </p>
          <p class="card-text">
            <strong>Description :</strong> 
            <%= @produit.description %>
          </p>
          <p class="card-text">
            <strong>Prix :</strong> 
            <%= @produit.prix %>
          </p>
          <div>
            <% if @produit.image.attached? %>
              <%= image_tag(@produit.image, class: "imageback") %>
            <% else %>
              <p>Aucune image disponible</p>
            <% end %>
          </div>
          <div class="d-flex align-items-center justify-content-center">
            <%= link_to 'Éditer', edit_produit_path(@produit), class:'btn btn-primary mr-2' %>
            <%= link_to 'Retour', {:controller => 'produits', :action => 'index'}, class: 'btn btn-secondary mr-2' %>
            <%= button_to 'Delete', produit_path(@produit), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
