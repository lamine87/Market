      <div class="mb-3">
        <%= form.label :prix %>
        <%= form.text_field :prix, class: "form-control", placeholder: "Prix de l'article" %>
      </div>

      <div class="mb-3">
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

