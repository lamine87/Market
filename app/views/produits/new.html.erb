<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mt-5 mb-5">
      <div class="card-body" id="connecter">
      <h1 class="d-flex align-items-center justify-content-center mb-5 mt-5">Ajouter un Article</h1>
        <%= form_with model: @produit, url: produits_path, multipart: true do |form| %>
          <div class="mb-3">
            <%= form.label :nom %>
            <%= form.text_field :nom, class: "form-control", placeholder: "Nom de l'article" %>
          </div>

          <div class="mb-3">
            <%= form.label :description %>
            <%= form.text_field :description, class: "form-control", placeholder: "Description de l'article" %>
          </div>

          <div class="mb-3">
            <%= form.label :prix %>
            <%= form.text_field :prix, class: "form-control", placeholder: "Prix de l'article" %>
          </div>

          <div class="mb-3">
            <%= form.label :image %>
            <%= form.file_field :image, class: "form-control" %>
          </div>

          <div class="text-center mb-3">
            <%= form.submit "CrÃ©er un Article", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
