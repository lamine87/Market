<div class="container">
  <h1 class="d-flex align-items-center justify-content-center"></h1>
  <div class="row row-cols-1 row-cols-md-3 mb-3">
    <% @produits.each do |produit| %>
      <div class="col-lg-3 mb-3">
        <div class="card">
          <% if produit.image.attached? %>
            <%= image_tag(produit.image, class: "image") %>
          <% else %>
            Aucune image disponible
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= produit.nom %></h5>
            <p class="card-text"><%= produit.description %></p>
            <p class="card-text"><small class="text-muted"><%= produit.prix %>â‚¬</small></p>
            <p><%= produit.created_at.strftime("%d %b %Y") %></p>
<%
=begin%>
 <p><%= I18n.l(produit.created_at, format: :short) %></p> 
<%
=end%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
